//- book-details.pug :
//- book detail page.
extends layout.pug
block content
	h1 Book Details:
		if(errors)
			h2.errors Uh oh!  You seem to be missing some stuff.
			ul.errors
				each error in errors
					li.update-error-style= error.message
	form(method='post', action=`/books/${book.id}`, onsubmit=`return confirm('Are you sure you want to update "${book.title}"?');`)
		
		p
			label(for='title') Title:
			input#author(name='title', type='text', value=book.title)
		p
			label(for='author') Author:
			input#author(name='author', type='text', value=book.author)
		p
			label(for='genre') Genre:
			input#genre(name='genre', type='text', value=book.genre)
		p
			label(for='year') Year:
			input#year(name='year', type='text', value=book.year)
		h3 Options:
		p
			input(type='submit', value='Update Book')

	form(method='post', action=`/books/${book.id}/delete`, onsubmit=`return confirm('Do you really want to delete "${book.title}"?  THIS CANNOT BE UNDONE!');`)
		p
			input(type='submit', value='Delete Book')

	a(href='/') ‚Üê Back to Home


